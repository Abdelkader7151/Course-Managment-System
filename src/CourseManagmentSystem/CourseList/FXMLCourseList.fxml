<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CourseManagmentSystem.CourseList.FXMLCourseListController">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>
    <VBox spacing="10" style="-fx-background-color: grey;" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <ListView fx:id="courseListView" prefHeight="200" prefWidth="300" style="-fx-background-color: red;" />
        <Button fx:id="viewDetailsButton" onAction="#handleViewDetails" text="View Details" textFill="#a21616" />
    </VBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
